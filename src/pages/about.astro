---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import Introduction from "../components/about/Introduction.astro";
import Experience from "../components/about/Experience.astro";
import Layout from "../layouts/Layout.astro";

import "../styles/global.css";

const pageTitle = "About me";
const pageTab = "about";
---

<Layout title={pageTitle} pageTab={pageTab}>
  <Introduction />

  <section class="w-11/12 mx-auto lg:w-2/3">
    <p
      class="mt-10 text-2xl leading-normal tracking-wide text-center text-black dark:text-white selection:bg-purple-300 selection:text-amber-600"
    >
      Licenses & certifications:
    </p>

    <ul class="flex justify-around mt-6">
      <li class="w-48">
        <a
          href="https://www.credly.com/badges/9baf8d7c-86de-49ee-9cfd-7376ac8d2c65/public_url"
          target="_blank"
        >
          <img src="aws-certified-data-analytics-specialty.png" alt="" />
        </a>
      </li>
      <li class="w-48">
        <a
          href="https://www.credly.com/badges/80c5d230-dc22-4d12-9640-020117653d8f/public_url"
          target="_blank"
        >
          <img
            src="ckad-certified-kubernetes-application-developer.png"
            alt=""
          />
        </a>
      </li>
      <li class="w-48">
        <a
          href="https://www.credly.com/badges/9b169808-6a5a-4fe1-81c2-11566dbc8d3c/public_url"
          target="_blank"
        >
          <img src="aws-certified-solutions-architect-associate.png" alt="" />
        </a>
      </li>
    </ul>
  </section>
  <Experience />
</Layout>
